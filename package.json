{
  "name": "nest-gql",
  "version": "0.1.0",
  "description": "Country GraphQL API with NestJS",
  "author": "Chris Ha <chunghha@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:check": "npx tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "npx compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "npx compodoc -s"
  },
  "dependencies": {
    "@nestjs/common": "~6.5.3",
    "@nestjs/core": "~6.5.3",
    "@nestjs/graphql": "~6.4.2",
    "@nestjs/platform-express": "~6.5.3",
    "@nestjs/testing": "~6.5.3",
    "apollo-server-express": "~2.8.2",
    "graphql": "~14.5.0",
    "graphql-tools": "~4.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "~6.5.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@types/express": "~4.17.1",
    "@types/graphql": "~14.2.3",
    "@types/jest": "^24.0.18",
    "@types/node": "~12.7.2",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "~1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
