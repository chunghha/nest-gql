{
  "name": "nest-gql",
  "version": "0.1.0",
  "description": "Country GraphQL API with NestJS",
  "author": "Chris Ha <chunghha@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:check": "npx tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "npx compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "npx compodoc -s"
  },
  "dependencies": {
    "@nestjs/common": "~6.1.1",
    "@nestjs/core": "~6.1.1",
    "@nestjs/graphql": "~6.0.5",
    "@nestjs/platform-express": "~6.1.1",
    "@nestjs/testing": "~6.1.1",
    "apollo-server-express": "~2.5.0",
    "graphql": "~14.3.0",
    "graphql-tools": "~4.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "~6.5.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@types/express": "~4.16.1",
    "@types/graphql": "~14.2.0",
    "@types/jest": "^24.0.12",
    "@types/node": "~10.14.6",
    "@types/supertest": "^2.0.7",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
