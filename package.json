{
  "name": "nest-gql",
  "version": "0.1.0",
  "description": "Country GraphQL API with NestJS",
  "author": "Chris Ha <chunghha@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "cross-env-shell NODE_ENV=prod pm2 start ecosystem.config.js",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "npx compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "npx compodoc -s"
  },
  "dependencies": {
    "@nestjs/common": "~6.11.5",
    "@nestjs/core": "~6.11.5",
    "@nestjs/graphql": "~6.5.3",
    "@nestjs/platform-express": "~6.11.5",
    "@nestjs/testing": "~6.11.5",
    "apollo-server-express": "~2.9.16",
    "graphql": "~14.6.0",
    "graphql-tools": "~4.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "~6.5.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@types/express": "~4.17.1",
    "@types/jest": "^25.1.1",
    "@types/node": "~12.12.26",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "~1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
